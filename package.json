{
  "name": "nexo-desktop",
  "version": "1.1.14",
  "description": "Nexo desktop app built with Electron",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "dist": "npm run version:sync && npm run version:verify && electron-builder --publish never",
    "dist:win": "npm run version:sync && npm run version:verify && electron-builder --win nsis --publish never",
    "version:sync": "node scripts/sync-version-from-tag.js",
    "version:verify": "node scripts/verify-version-consistency.js"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.nexo.desktop",
    "productName": "Nexo",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "update-manager.js",
      "preload.js",
      "renderer/**/*"
    ],
  "publish": [
  {
    "provider": "github",
    "owner": "zhinouno-ui",
    "repo": "Nexo.exe",
    "releaseType": "release"
  }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
