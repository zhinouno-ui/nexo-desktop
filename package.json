{
  "name": "nexo-desktop",
  "version": "1.1.16",
  "description": "Nexo desktop app built with Electron",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder --publish never",
    "dist:win": "electron-builder --win nsis",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.nexo.desktop",
    "productName": "Nexo",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "update-manager.js",
      "preload.js",
      "renderer/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "zhinouno-ui",
        "repo": "nexo-desktop",
        "channel": "latest"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
